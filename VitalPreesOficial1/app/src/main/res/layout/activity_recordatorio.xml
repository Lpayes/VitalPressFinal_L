<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".RecordatorioActivity">

    <!-- ENCABEZADO COMÚN - Color anaranjado -->
    <LinearLayout
        android:id="@+id/encabezado_comun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/anaranjado"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/logo_vitalpress"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logovitalpress"
                android:contentDescription="@string/logo_vitalpress_desc" />

            <TextView
                android:id="@+id/titulo_seccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recordatorio_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/frase_fija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tu_salud_es_primero"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Contenido principal scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/encabezado_comun"
        android:layout_above="@+id/btn_regresar_recordatorio"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen de recordatorio - esquina superior izquierda -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imagen_recordatorio"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/recordatorioimagen"
                    android:contentDescription="@string/imagen_recordatorio_desc"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imagen_recordatorio"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/toca_agregar_recordatorio"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="italic" />

            </RelativeLayout>

            <!-- Formulario de agregar recordatorio (inicialmente oculto) -->
            <LinearLayout
                android:id="@+id/layout_formulario_recordatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/fragmento_beige_curvo"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nuevo_recordatorio"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Campo Fecha -->
                <EditText
                    android:id="@+id/edit_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/seleccionar_fecha_hint"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_today"
                    android:layout_marginBottom="16dp" />

                <!-- Campo Hora -->
                <EditText
                    android:id="@+id/edit_hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/seleccionar_hora_hint"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_recent_history"
                    android:layout_marginBottom="16dp" />

                <!-- Sugerencia de frecuencia según edad -->
                <TextView
                    android:id="@+id/txt_sugerencia_frecuencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sugerencia: --"
                    android:textColor="@color/azul"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp" />

                <!-- Campo Descripción -->
                <EditText
                    android:id="@+id/edit_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/descripcion_recordatorio_hint"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:layout_marginBottom="24dp" />

                <!-- Botones del formulario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_aceptar_recordatorio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aceptar"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/boton_beige_curvo"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_cancelar_recordatorio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancelar"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/gris"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Lista de recordatorios acumulados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_titulo_recordatorios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mis_recordatorios"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

                <!-- Container para recordatorios dinámicos -->
                <LinearLayout
                    android:id="@+id/container_recordatorios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Botón Regresar - DENTRO de la pantalla, esquina inferior derecha -->
    <Button
        android:id="@+id/btn_regresar_recordatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/regresar"
        android:textColor="@color/white"
        android:backgroundTint="@color/rojo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp" />

</RelativeLayout>
