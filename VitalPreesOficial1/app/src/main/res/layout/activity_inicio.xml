<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/rosada"
    tools:context=".InicioActivity">

    <!-- ENCABEZADO COMÚN - Color anaranjado -->
    <LinearLayout
        android:id="@+id/encabezado_comun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/anaranjado"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Parte superior del encabezado: logo y título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Logo VitalPress -->
            <ImageView
                android:id="@+id/logo_vitalpress"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/logovitalpress"
                android:contentDescription="Logo VitalPress" />

            <!-- Título dinámico -->
            <TextView
                android:id="@+id/titulo_seccion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inicio"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center" />

        </LinearLayout>

        <!-- Frase fija -->
        <TextView
            android:id="@+id/frase_fija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tu salud es primero"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Imagen central: corazón -->
        <ImageView
            android:id="@+id/imagen_corazon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/corazon"
            android:contentDescription="Corazón VitalPress"
            android:layout_marginBottom="32dp" />

        <!-- FRAGMENTO para campos de login -->
        <LinearLayout
            android:id="@+id/fragmento_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/fragmento_beige_curvo"
            android:padding="24dp"
            android:layout_marginBottom="32dp">

            <!-- Campo Correo electrónico -->
            <EditText
                android:id="@+id/edit_correo_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="16dp" />

            <!-- Campo Contraseña -->
            <EditText
                android:id="@+id/edit_contrasena_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:layout_marginBottom="24dp" />

            <!-- Botón Iniciar Sesión -->
            <Button
                android:id="@+id/btn_iniciar_sesion_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/boton_beige_curvo" />

            <!-- Mensaje de registro mejorado debajo del botón -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txt_mensaje_no_cuenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿No tienes una cuenta? "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_mensaje_registrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regístrate"
                    android:textStyle="bold"
                    android:textColor="@color/rojo"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Botón Regresar - inferior derecha -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_regresar_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:textColor="@color/white"
            android:backgroundTint="@color/rojo"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <!-- Botón Inicio - inferior izquierda -->

</LinearLayout>
